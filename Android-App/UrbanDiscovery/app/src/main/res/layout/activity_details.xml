<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:id="@+id/offer_details_layout">
        <TextView
            android:id="@+id/offer_details_title"
            style="@style/TextStyleH1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/offer_details_description"
            style="@style/TextStyleP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            style="@style/TextStyleH2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bedingungen"/>

        <TextView
            android:id="@+id/offer_details_condition"
            style="@style/TextStyleP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/TextStyleH2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anbieter"/>

        <TextView
            android:id="@+id/offer_details_user_name"
            style="@style/TextStylePnoSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/offer_details_user_address"
            style="@style/TextStylePnoSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/offer_details_user_city"
            style="@style/TextStyleP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/offer_details_map"/>



    </LinearLayout>


</LinearLayout>